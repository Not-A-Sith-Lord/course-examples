<h1> Todo List App </h1>

<h2> Your tasks </h2>

<ul>
  <% @tasks.each do |the_task| %>
    <li>
      <%= the_task.content %>

      <% if the_task.complete? == false %>
        <form method="post" action="/complete_task">
          <input type="hidden" name="id" value="<%= the_task.id %>">
          <button> Complete this task </button>
        </form>
      <% else %>
        DONE!

        <form method="post" action="/delete_task">
          <input type="hidden" name="id" value="<%= the_task.id %>">
          <button> Delete </button>
        </form>
      <% end %>
    </li>
  <% end %>
</ul>

<a href="/new_task">
  Add a new task
</a>
